{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/globals.d.ts"
  ],
  "ts-node": {
    "files": true
  }
}
